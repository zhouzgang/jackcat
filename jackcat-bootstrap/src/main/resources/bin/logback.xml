<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <property name="LOG_HOME" value="${rxtomcat.base}/logs"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_HOME}/rxtomcat.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>${LOG_HOME}/jackcat.%d{yyyy-MM-dd}.log</fileNamePattern>

      <!-- keep 30 days' worth of history capped at 1GB total size -->
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>10</maxHistory>
      <totalSizeCap>100MB</totalSizeCap>
    </rollingPolicy>

    <encoder charset="utf-8">
      <pattern>%d{HH:mm:ss.SSS} [%-13thread] %-5level %logger:%L - %msg%n</pattern>
    </encoder>
  </appender> 

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %d{HH:mm:ss.SSS} [%-13thread] %-5level %logger:%L - %msg%n
      </Pattern>
    </layout>
  </appender>

<!--   <logger name="com.mkyong" level="debug" additivity="false"> -->
<!--     <appender-ref ref="CONSOLE" /> -->
<!--   </logger> -->

    <!-- TRACE < DEBUG < INFO <  WARN < ERROR < OFF -->
  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>